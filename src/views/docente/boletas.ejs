<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Boletas docente</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Candara, Arial, sans-serif;
            background-image: url('fondo.png');
            background-size: cover;
            background-repeat: no-repeat;
        }

        #franjaSuperior {
            position: fixed;
            top: 0;
            left: 0px;
            width: calc(100%);
            height: 35px;
            background-color: #ACC5EE;
            z-index: 9999;
        }

        h1 {
            text-align: center;
        }

        #menu {
            position: fixed;
            margin-top: 35px;
            left: 0;
            top: 0px;
            bottom: 0;
            width: 200px;
            font-family: Courier New, sans-serif;
            color: #FFF;
            padding: 25px;
            background-color: #162030;
            background-size: cover;
            opacity: 100;
        }

     
        #menu h2 {
            margin-top: 10px;
            margin-left: 50px;
            font-size: 35px;
        }

        #menu ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        #menu ul li {
            margin-bottom: 20px;
            display: grid;
            grid-template-columns: auto;
            align-items: center;
        }

        #menu ul li button {
            padding: 20px;
            margin: 10px 0;
            background-color: transparent;
            color: transparent;
            border: none;
            cursor: pointer;
            text-align: left;
            width: calc(100% - 0px);
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
        }

        #menu ul li button:hover {
            background-color: #3D8BD2;
        }

        #contenido {
            margin-left: 270px;
            margin-right: 300px;
            margin-top: 50px;
            padding: 0px;
            text-align: center;
            text-align: justify;
        }

        .titulo {
            font-size: 24px;
            color: #162030;
            text-transform: uppercase;
            font-weight: bold;
            text-align: center;
        }

        .imagen-container {
            margin-bottom: 0px; 
        }

        .imagen-container img {
            width: 50px; 
            height: auto;         
        }

        /* Estilos para la tabla */
        #tabla {
            margin: 35px 0 0 0; /* Margen superior para evitar que se superponga con la franja superior */
            width: calc(92% - 200px); /* El ancho de la tabla es el ancho total menos el ancho del menú */
            margin-left: 280px; /* Para alinearla con el menú */
            margin-right: 40px;
            table-layout: fixed;
            border-collapse: collapse;
        }

        #tabla th, #tabla td {
            border: 1px solid black;
            padding: 10px;
            text-align: center;
        }

        /* encabezados */
        #tabla th {
            background-color: #45659B; 
            color: white; 
        }
        /*celdas*/
        #tabla td {
            background-color: #E9F0FB;
        }

        /* Ajuste para el campo de selección */
        label {
            
            margin-top: 80px; /* Ajuste el margen según sea necesario */ }

        select {
            width: 20%;
            padding: 8px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 16px;
            margin-left:  20px;
            background-color: #E9F0FB;
        }

        #Materia {
            margin-top: 50px;
            margin-left: 280px;
        }
        #Grupo {
            margin-top: 20px;
            margin-left: 250px;
        }
    </style>
</head>
<body>
<div id="franjaSuperior"></div>

<div id="menu">
    <h2>Menú</h2>
    <ul>
        <li>
            <button style="background-image: url('img/boletas.png');" onclick="window.location.href='BOLETAS_DOC.html'"></button>
        </li>
        <li>
            <button style="background-image: url('img/horario2.png');" onclick="window.location.href='HORARIO_DOC.html'"></button>
        </li>
    </ul>
</div>

<!-- Campo para seleccionar semestre -->

<select id="Materia" onchange="updateTable()">
    <option value="1">Materia 1</option>
    <option value="2">Materia 2</option>
    <option value="3">Materia 3</option>
    <option value="4">Materia 4</option>
    <option value="5">Materia 5</option>
    <option value="6">Materia 6</option>
</select>

<!-- Campo para seleccionar grupo -->

<select id="Grupo" onchange="updateTable()">
    <option value="A">Grupo A</option>
    <option value="B">Grupo B</option>
    <option value="C">Grupo C</option>
    <option value="D">Grupo D</option>
    <option value="E">Grupo E</option>
    <option value="F">Grupo F</option>
</select>

<!-- Tabla -->
<table id="tabla">
    <thead>
        <tr>
            <th>Encabezado 1</th>
            <th>Encabezado 2</th>
            <th>Encabezado 3</th>
            <th>Encabezado 4</th>
        </tr>
    </thead>
    <tbody id="cuerpoTabla">
        <!-- Aquí se actualizarán las filas según la selección -->
    </tbody>
</table>

<script>
    function updateTable() {
        var semestre = document.getElementById("Materia").value;
        var grupo = document.getElementById("Grupo").value;
        var cuerpoTabla = document.getElementById("cuerpoTabla");

        // Limpia las filas existentes
        cuerpoTabla.innerHTML = "";

        // Ejemplo: Agregar 4 filas con datos de ejemplo
        for (var i = 0; i < 4; i++) {
            var newRow = document.createElement("tr");
            newRow.innerHTML = `
                <td>Dato ${i + 1} - Materia ${semestre} - Grupo ${grupo}</td>
                <td>Dato ${i + 2} - Materia ${semestre} - Grupo ${grupo}</td>
                <td>Dato ${i + 3} - Materia ${semestre} - Grupo ${grupo}</td>
                <td>Dato ${i + 4} - Materia ${semestre} - Grupo ${grupo}</td>
            `;
            cuerpoTabla.appendChild(newRow);
        }
    }

    // Llama a updateTable al cargar la página para mostrar los datos por defecto
    window.onload = updateTable;
</script>

</body>
</html>