<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Personal</title>
    <link rel="stylesheet" href="/css/styleAgregarMateria.css">
    <script src="/script/scriptAgregarMateria.js"></script>
</head>
<body>

<div id="franjaSuperior"></div>

<%- include('../partials/menuPersonal') %>
 

    <div id="contenido">
        <form id="formularioMateria" method="post" 
        onsubmit="return validateForm(action)" >

        <div class="campo" id="campos-izquierda">
            <label for="nombre">Nombre de la materia</label>
            <select id="nombre" name="nombre" required>
                <option value="">Selecciona una materia</option>
                <option value="Matemáticas">Matemáticas</option>
                <option value="Ciencias">Ciencias</option>
                <option value="Historia">Historia</option>
                <option value="Literatura">Literatura</option>
                <option value="Inglés">Inglés</option>
                <option value="Arte">Arte</option>
                <option value="Educación Física">Educación Física</option>
                <option value="Programación">Programación</option>
                <option value="Biología">Biología</option>
                <option value="Química">Química</option>
                <option value="Física">Física</option>
                <option value="Geografía">Geografía</option>
                <option value="Economía">Economía</option>
                <option value="Psicología">Psicología</option>
                <option value="Cálculo">Cálculo</option>
            </select>
            

             <label for="hora">Hora</label>
            <select id="hora" name="hora">
                <option value="">Selecciona Hora-Clase</option>
                <option value="07:00:00">07:00 - 08:00</option>
                <option value="08:00:00">08:00 - 09:00</option>
                <option value="09:00:00">09:00 - 10:00</option>
                <option value="10:00:00">10:00 - 11:00</option>
                <option value="11:00:00">11:00 - 12:00</option>
                <option value="12:00:00">12:00 - 13:00</option>
                <option value="13:00:00">13:00 - 14:00</option>
            </select>

            <label for="dias">Dias</label>
            <select id="dias" name="dias">
                <option value="">Selecciona Dias</option>
                <option value="Lunes-Viernes">Lunes-Viernes</option>
                <option value="Lunes-Jueves">Lunes-Jueves</option>
                <option value="Miercoles-Jueves">Miercoles-Jueves</option>
            </select>

            <label for="salon">Aula</label>
            <select id="salon" name="salon" required>
                <option value="">Selecciona Aula</option>
                <option value="Aula 101">Aula 101</option>
                <option value="Aula 102">Aula 102</option>
                <option value="Aula 103">Aula 103</option>
                <option value="Aula 104">Aula 104</option>
                <option value="Aula 105">Aula 105</option>
                <option value="Aula 106">Aula 106</option>
                <option value="Aula 107">Aula 107</option>
                <option value="Aula 108">Aula 108</option>
                <option value="Aula 109">Aula 109</option>
                <option value="Aula 110">Aula 110</option>
                <option value="Aula 111">Aula 111</option>
            </select>
            
             <label for="perido">Periodo</label>
             <select id="periodo" name="periodo" class="year">
                <option value="">Selecciona Periodo</option>
                <option value="Enero-Junio-">Enero-Junio</option>
                <option value="Agosto-Diciembre-">Agosto-Diciembre</option>
            </select>
 
        </div>

        <div class="campo" id="campos-derecha">
            <label for="docente">Docente</label>
            <select id="docente" name="docente">
             <option value="">Selecciona Docente</option>
            </select>
        </div>

      

        <div class="campo" id="campos-derecha">
            <label for="semestre">Semestre</label>
            <select id="semestre" name="semestre">
                <option value="">Selecciona Semestre</option>
                <option value="1">1°</option>
                <option value="2">2°</option>
                <option value="3">3°</option>
                <option value="4">4°</option>
                <option value="5">5°</option>
                <option value="6">6°</option>
                <option value="7">7°</option>
            </select>
            <button  type="submit" name="accion" value="buscar"  class="ov-btn-slide-right" style=" 
                        color: white; 
                        padding: 10px 25px; 
                         cursor: pointer; 
                        min-width: 150px; 
    "
                         onclick="validateForm('/buscarMateria')">
                            Buscar
                        </button>
                        <input type="hidden" name="docente_antiguo" id="docente_antiguo">
                        <input type="hidden" name="hora_antigua" id="hora_antigua" >
        </div>

        <div id="botones">
            <br><br>
            <button type="submit" name="accion" value="modificar" class="ov-btn-slide-right" onclick="validateForm('/modificarMateria')">Guardar</button>
            <button type="submit" name="accion" value="guardar" class="ov-btn-slide-right" onclick="validateForm('/insertarMateria')">Crear</button>
            <button type="button" name="accion" value="eliminar" class="ov-btn-slide-right" onclick="validateForm('/eliminarMateria')">Eliminar</button>
            <button type="button" name="accion" value="cancelar" class="ov-btn-slide-right" onclick="cancelarFormulario()">Cancelar</button>
        
        </div>

    </div>


</form>
    
<div style="margin-top: 200px; margin-right: 30px; display: flex; justify-content: flex-end;">
    <select id="filtroIdMaestro" name="filtroIdMaestro" style="margin-right: 10px;" >
        <option value="">Selecciona Docente</option>
    </select>
    <select id="filtroPeriodo" name="filtroPeriodo" style="margin-right: 20px;" class="year">
        <option value="">Selecciona Periodo</option>
        <option value="Enero-Junio-">Enero-Junio</option>
        <option value="Agosto-Diciembre-">Agosto-Diciembre</option>
    </select>
    <input type="text" id="filtroNombreMateria" name="filtroNombreMateria" placeholder="Nombre de materia" style="margin-right: 10px;">

    <button id="aplicarFiltrosBtn" class="ov-btn-slide-right" style=" 
    color: white; 
    padding: 10px 25px; 
    cursor: pointer; 
    min-width: 150px; ">Aplicar Filtros</button>
</div>


<div id="tabla"></div>

</body>
</html>
