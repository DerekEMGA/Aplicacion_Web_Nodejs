<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Formulario de Validación</title>
  <style>
    /* Estilo para el cuadro de diálogo personalizado */
    .custom-alert {
      display: none;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      padding: 20px;
      background-color: #fff;
      border: 1px solid #ccc;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
      z-index: 1000;
    }

    /* Estilo para el fondo oscuro de fondo */
    .overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: 999;
    }
  </style>
</head>
<body>

  <form onsubmit="return validateForm()">
    <label for="userType">Tipo de usuario:</label>
    <input type="radio" name="userType" value="admin" onclick="botonSeleccionado = true;"> Admin
    <input type="radio" name="userType" value="user" onclick="botonSeleccionado = true;"> Usuario

    <!-- Botón de envío -->
    <input type="submit" value="Enviar">
  </form>

  <!-- Cuadro de diálogo personalizado -->
  <div class="overlay" id="overlay"></div>
  <div class="custom-alert" id="customAlert">
    <p>Selecciona un tipo de usuario</p>
    <button onclick="closeAlert()">Cerrar</button>
  </div>

  <script>
    // Variable de ejemplo (asegúrate de tener tu propia lógica para esta variable)
    var botonSeleccionado = false;

    function validateForm() {
      if (!botonSeleccionado) {
        // Mostrar cuadro de diálogo personalizado
        document.getElementById("overlay").style.display = "block";
        document.getElementById("customAlert").style.display = "block";
        return false;
      }
      return true;
    }

    function closeAlert() {
      // Ocultar cuadro de diálogo personalizado
      document.getElementById("overlay").style.display = "none";
      document.getElementById("customAlert").style.display = "none";
    }
  </script>
</body>
</html>
